{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
    <div class="container mt-5">

        <div class="w-full d-flex items-center justify-center gap-5">

            <div style="width: 200px; height: 200px">

                {% if donneesPhoto %}
                    <img src="data:image/{{ format }};base64,{{ donneesPhoto }}" alt="Photo de profil" width="200" height="200" class="rounded-circle border border-dark">
                {% else %}
                    <div class="rounded-circle bg-secondary" style="width: 200px; height: 200px;"></div>
                {% endif %}

            </div>

            <div class="flex items-center justify-center w-75">
                {% if compte is not null %}
                    <h2>{{ compte.nomAffichage }}</h2>

                    <div class="d-flex justify-between items-center w-full">
                        <h5 class="font-weight-light">@{{ compte.username }}</h5>
                        {# Il faut pouvoir modifier le compte seulement si c'est le sien #}
                        <div class="flex items-center justify-center">
                            {% if app.user is not null and app.user.id == compte.id %}
                                <a href="{{ path('app_compte_edit', {'id': compte.id}) }}" class="btn btn-sm me-3"><i class="fa-solid fa-gear"></i></a>
                            {% endif %}
                        </div>
                    </div>

                    {# Mettre la biographie #}
                    <p>{{ compte.biographie }}</p>
                    <div class="mt-3">
                        <h5 class="text-muted">Établissement:</h5>
                        <div class="card">
                            <div class="card-body">
                                {% if compte.etablissementId is not null %}
                                    <h6 class="card-title">{{ compte.etablissementId.nom }}</h6>
                                    <p class="card-text text-muted">Localisation: {{ compte.etablissementId.pays }}, {{ compte.etablissementId.codePostal }}</p>
                                {% else %}
                                    <p class="card-text text-muted">Pas d'établissement associé</p>
                                    {# Formulaire pour associer un établissement #}

                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center justify-between">

                        <div class="flex items-center justify-center">

                            {% if app.user is not null and app.user.id != compte.id %}

                                {% if abonne %}
                                    <a href="{{ path('app_unsubscribe', {'id': compte.id}) }}" class="btn btn-sm btn-danger">Se désabonner</a>
                                {% else %}
                                    <a href="{{ path('app_subscribe', {'id': compte.id}) }}" class="btn btn-sm btn-primary">S'abonner</a>
                                {% endif %}

                            {% endif %}

                            <a href="{{ path('app_compte_abonnements', {'id': compte.id}) }}" class="btn btn-primary">Abonnements</a>
                            <a href="{{ path('app_compte_abonnements', {'id': compte.id}) }}" class="btn btn-success">Associate</a>
                        </div>

                    </div>

                {% else %}
                    <p>Compte non trouvé.</p>
                {% endif %}

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Signaler le compte</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form action="{{ path('app_compte_signaler', {'id': compte.id}) }}">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label">Raison du Signalement</label>
                                        <textarea name="reportArea" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Écrivez ici..."></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <button type="submit" class="btn btn-danger">Signaler</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <hr>

        <h3 class="text-center"> Mes Publications</h3>
        {% if publications %}
            <ul class="list-group">
                {% for publication in publications %}
                    <li class="list-group-item">
                        <h4>{{ publication.titre }}</h4>
                        <p>{{ publication.description }}</p>
                        <!-- Ajoutez les autres éléments ici comme vous l'avez fait dans votre exemple -->
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <h6 class="text-center text-secondary font-weight-light">Aucune publication pour le moment.</h6>
        {% endif %}

        <h6 class="text-center text-secondary font-weight-light">Aucune publication pour le moment.</h6>

    </div>
{% endblock %}
